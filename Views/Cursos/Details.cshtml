@model Parciaaaal.Models.Curso
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<h2>@Model.Nombre</h2>

<div class="mb-3">
    <strong>Código:</strong> @Model.Codigo <br />
    <strong>Créditos:</strong> @Model.Creditos <br />
    <strong>Horario:</strong> @Model.HorarioInicio.ToString(@"hh\:mm") - @Model.HorarioFin.ToString(@"hh\:mm") <br />
    <strong>Estado:</strong> @(Model.Activo ? "Activo" : "Inactivo")
</div>

@* Mostrar mensaje de TempData si existe *@
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Catálogo</a>

    @* Botón Editar solo coordinador *@
    @if (User.IsInRole("Coordinador"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar Curso</a>
    }

    @* Botón Matricular solo estudiante *@
    @if (!User.IsInRole("Coordinador"))
    {
        <form asp-controller="Matriculas" asp-action="Create" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="cursoId" value="@Model.Id" />
            <button type="submit" class="btn btn-success">Matricular</button>
        </form>
    }
</div>
