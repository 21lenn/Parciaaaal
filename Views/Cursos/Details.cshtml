@model Parciaaaal.Models.Curso

@{
    ViewData["Title"] = "Detalle del Curso";
}

<h1 class="mb-4 text-primary">@Model.Nombre</h1>

<div class="mb-3">
    <p><strong>Código:</strong> @Model.Codigo</p>
    <p><strong>Créditos:</strong> @Model.Creditos</p>
    <p><strong>Horario:</strong> 
        @(Model.HorarioInicio.ToString(@"hh\:mm")) - @(Model.HorarioFin.ToString(@"hh\:mm"))
    </p>
</div>

<!-- Mensajes de éxito o error -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Botón de inscripción -->
<form asp-controller="Matriculas" asp-action="Inscribirse" method="post">
    <input type="hidden" name="cursoId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Inscribirse</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al catálogo</a>
</div>
