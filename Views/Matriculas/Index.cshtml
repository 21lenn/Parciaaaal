@model IEnumerable<Parciaaaal.Models.Matricula>

<h1 class="mb-4 text-primary">Lista de Matrículas</h1>

<table class="table table-striped">
    <thead class="table-primary">
        <tr>
            <th>Curso</th>
            <th>Estudiante</th>
            <th>Estado</th>
            <th>Fecha Registro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Curso?.Nombre</td>
                <td>@m.UsuarioId</td>
                <td>@m.Estado</td>
                <td>@m.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @* Coordinador puede Confirmar o Cancelar *@
                    @if (User.IsInRole("Coordinador"))
                    {
                        @if (m.Estado == "Pendiente")
                        {
                            <form asp-action="Confirmar" asp-route-id="@m.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-success">Confirmar</button>
                            </form>
                        }

                        <form asp-action="Cancelar" asp-route-id="@m.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                        </form>
                    }
                    @* Estudiante solo puede cancelar su propia matrícula confirmada *@
                    @if (!User.IsInRole("Coordinador") && m.Estado == "Confirmada")
                    {
                        <form asp-action="Delete" asp-route-id="@m.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

